<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewGamePostGame">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/gameNumberpost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Game"
                android:textSize="30sp" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="343dp"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/game" />

            <TextView
                android:id="@+id/detailsTxt"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Game details"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ID"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="OPERATIONAL SUPERVISOR:"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/superVisorTxtPost"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="GAMEKEEPER ASSIGNED:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gkTxtPost"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="GROUP SIZE:" />

            <TextView
                android:id="@+id/gr"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Click NEXT to process to postgame" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_selector2"
                android:gravity="center_vertical|center_horizontal"
                android:text="NEXT"
                android:textColor="@color/cardview_light_background" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>