<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.miggyisidro.mysterymanilabetademo.RegisterUserActivity">
    <ImageView
        android:id="@+id/mmLogo"
        android:layout_width="236dp"
        android:layout_height="263dp"
        android:src="@drawable/bg_black"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="50dp"/>


    <EditText
        android:id="@+id/et_username_registration"
        android:inputType="textEmailAddress"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="38dp"
        android:layout_below="@id/mmLogo"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:textSize="18dp"
        android:hint=" Enter Username" />

    <!--  android:drawableLeft="@drawable/ic_action_username"  -->

    <EditText
        android:id="@+id/et_password_registration"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/et_username_registration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="18dp"
        android:background="#ffffff"
        android:hint="Enter Password"
        android:inputType="textPassword" />

    <!-- android:drawableLeft="@drawable/ic_action_password"  -->

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password_registration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/tv_signIn"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mmLogo"
        android:layout_below="@+id/btnRegister"

        android:text="Already Registered? Sign in here!"
        android:textColor="#A9A9A9"/>

</RelativeLayout>


